@page
@model AssassinsProject.Pages.Signup.VerifyModel
@{
    ViewData["Title"] = "Verify Email";
}

<h1>Verify Email</h1>

@if (Model.Verified)
{
    <div class="alert alert-success">
        @Model.Message
    </div>
    <p>
        <a class="btn btn-primary" asp-page="/Games/Index">Go to Games</a>
    </p>
}
else
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}
