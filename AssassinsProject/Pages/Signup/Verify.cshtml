@page
@model AssassinsProject.Pages.Signup.VerifyModel
@{
    ViewData["Title"] = "Email Verification";
}

<h2>Email verification</h2>

@if (Model.Success)
{
    <div class="alert alert-success">@Model.Message</div>
    <p><a class="btn btn-primary" asp-page="/Games/Index">Go to Games</a></p>
}
else
{
    <div class="alert alert-danger">@Model.Message</div>
    <p><a class="btn btn-secondary" asp-page="/Signup/Index" asp-route-gameId="@Model.GameId">Back to Signup</a></p>
}
