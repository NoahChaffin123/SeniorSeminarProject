@page
@model AssassinsProject.Pages.Games.IndexModel
@{
    ViewData["Title"] = "Games";
}
<h1>Games</h1>

<p>
    <a class="btn btn-success" asp-page="/Games/Create">Create Game</a>
</p>

@if (Model.Games.Count == 0)
{
    <div class="alert alert-info">No games yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Started</th>
                <th>Ended</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var g in Model.Games)
        {
            <tr>
                <td>@g.Name</td>
                <td>@g.Status</td>
                <td>@(g.StartedAt?.ToLocalTime().ToString("g") ?? "—")</td>
                <td>@(g.EndedAt?.ToLocalTime().ToString("g") ?? "—")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-page="/Games/Details" asp-route-id="@g.Id">Open</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
